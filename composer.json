{
  "name": "trusti/notification-queue",
  "description": "Email notification queue system",
  "require": {
    "php": ">=8.1",
    "mailgun/mailgun-php": "^4.0",
    "vlucas/phpdotenv": "^5.5",
    "nyholm/psr7": "^1.8",
    "php-http/guzzle7-adapter": "^1.1",
    "railsware/mailtrap-php": "^3.7",
    "symfony/mime": "^7.3",
    "ramsey/uuid": "^4.9"
  },
  "autoload": {
    "psr-4": {
      "Trusti\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
